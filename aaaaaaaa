-- APAGANDO A BANCO DE DADOS
DROP DATABASE IF EXISTS DBEXERCICIO_12;

-- CRIANDO A BASE DA DADOS
CREATE DATABASE DBEXERCICIO_12;

-- CONECTANDO NA BASE DE DADOS
USE DBEXERCICIO_12;

-- CRIANDO A TABELA
CREATE TABLE VEICULO_DOCUMENTO (
IDVEICULO INT NOT NULL,
MODELO VARCHAR(120) NOT NULL,
MARCA VARCHAR(120) NOT NULL,
ANODEFABRICACAO VARCHAR(120) NOT NULL,
PLACA VARCHAR(120) NOT NULL,
IDDOCUMENTO INT NOT NULL,
RENAVAM INT NOT NULL UNIQUE,
DTREGISTRO DATE NOT NULL,
CIDADE VARCHAR(120) NOT NULL,
ESTADO VARCHAR(120) NOT NULL,
 PRIMARY KEY (IDVEICULO, IDDOCUMENTO)
);
